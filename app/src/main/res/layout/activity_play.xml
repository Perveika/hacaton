<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".play">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="608dp"
        android:layout_height="785dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/luzha" />

    <ImageView
        android:id="@+id/questions"
        android:layout_width="306dp"
        android:layout_height="106dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dobro" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="289dp"
        android:layout_height="63dp"
        android:fontFamily="@font/hachimarupop_regular"
        android:gravity="center_horizontal"
        android:text="Для кого писал Маршак?"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/questions"
        app:layout_constraintEnd_toEndOf="@+id/questions"
        app:layout_constraintStart_toStartOf="@+id/questions"
        app:layout_constraintTop_toTopOf="@+id/questions" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="347dp"
        android:layout_height="50dp"
        android:fontFamily="@font/hachimarupop_regular"
        android:gravity="center_horizontal"
        android:text="Выберите один вариант ответа"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questions" />

    <Button
        android:id="@+id/child"
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/btns"
        android:fontFamily="@font/hachimarupop_regular"
        android:text="1) для детей"
        android:textSize="16sp"
        app:cornerRadius="10sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:strokeColor="@color/obvodka"
        app:strokeWidth="2sp" />

    <Button
        android:id="@+id/adults"
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/btns"
        android:fontFamily="@font/hachimarupop_regular"
        android:text="2) для взрослых"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:cornerRadius="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/child"
        app:strokeColor="@color/obvodka"
        app:strokeWidth="2sp" />

    <Button
        android:id="@+id/all"
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/btns"
        android:fontFamily="@font/hachimarupop_regular"
        android:text="3) для всех"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:cornerRadius="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adults"
        app:strokeColor="@color/obvodka"
        app:strokeWidth="2sp" />


</androidx.constraintlayout.widget.ConstraintLayout>